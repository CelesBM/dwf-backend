{
  "name": "dwf-backend",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^18.0.0",
    "@vaadin/router": "^1.7.4",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase": "^9.8.4",
    "firebase-admin": "^11.0.0",
    "lodash": "^4.17.21",
    "nanoid": "^4.0.0",
    "nodemon": "^2.0.18",
    "parcel": "^2.0.0-rc.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "dev": "nodemon --watch server/index.ts --exec ts-node server/index.ts",
    "dev:front": "parcel serve ./client/index.html",
    "server": "ts-node ./server/index.ts",
    "build:front": "parcel build ./client/index.html",
    "build:api": "tsc ./server/index.ts",
    "dev:back": "node ./server/index.js",
    "build": "yarn build:front && yarn build:api",
    "start": "yarn dev:back"
  }
}
